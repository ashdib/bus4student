<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap");
    body {
      font-family: "Outfit", sans-serif;
    }
  </style>
  <body>
    <!------------------------------------------------------- Information Bar -------------------------------------------------------------------------------->

    <div class="container d-flex justify-content-center my-5">
      <div
        class="d-flex flex-column flex-sm-row justify-content-between"
        style="width: 60%"
      >
        <!-- TODO: Date Card -->
        <div class="card mb-3 mb-md-0 flex-grow-1">
          <div class="card-body">
            <h5 class="card-title">Date</h5>
            <p class="card-subtitle" id="date">Loading...</p>
          </div>
        </div>
        <!-- TODO: Time Card -->
        <div class="card mb-3 mb-md-0 flex-grow-1 mx-md-3">
          <div class="card-body">
            <h5 class="card-title">Time</h5>
            <p class="card-text" id="time">Loading...</p>
          </div>
        </div>
        <!-- TODO: Weather Card -->
        <div class="card flex-grow-1">
          <div class="card-body">
            <h5 class="card-title">Weather</h5>
            <p class="card-text" id="weather">Loading...</p>
            <p class="card-text" id="weather-preparation">Loading...</p>
          </div>
        </div>
      </div>
    </div>
    <!------------------------------------------------------- Information Bar -------------------------------------------------------------------------------->
    <!------------------------------------------------------- Search Bar with Form -------------------------------------------------------------------------------->
    <div class="container d-flex justify-content-center">
      <form
        action="app/schedule"
        class="d-flex row justify-content-center align-items-center gap-2 bg-light p-4 rounded-3 mt-1"
        style="width: 50%"
      >
        <!-- TODO: Add a form to search for a route -->
        <label for="waiting-point" class="mr-sm-2">Waiting Point:</label>
        <select
          id="waiting-point"
          name="waiting-point"
          class="form-control mr-sm-2 form-select"
        >
          <option value="kpz">KPZ</option>
          <option value="ktag">KTAG</option>
          <option value="perhentian bas serumpun">SERUMPUN</option>
          <option value="k10">K10</option>
          <option value="kmb">KMB</option>
          <!-- Add more options as needed -->
        </select>
        <!--   TODO: Add a form to search for a route   -->

        <label for="destination-point" class="mr-sm-2"
          >Destination Point:</label
        >
        <select
          id="destination-point"
          name="destination-point"
          class="form-control mr-sm-2 form-select"
        >
          >
          <option value="main_campus">Main Campus</option>
          <option value="agro_bio">Agro Bio</option>
          <option value="kmb">KMB</option>
          <!-- Add more options as needed -->
        </select>

        <input type="submit" value="Search" class="btn btn-primary" />
      </form>
    </div>
    <!------------------------------------------------------- Search Bar with Form -------------------------------------------------------------------------------->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
